<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.paintcnlabb.labb3.PaintController">
    <VBox prefHeight="30.0" prefWidth="600.0">
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Save" onAction="#save" />
                <MenuItem text="Exit" onAction="#exit" />
            </Menu>
        </MenuBar>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <ColorPicker fx:id="colorPicker"/>
            <TextField fx:id="brushSize" text="20"/>
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
        </HBox>
        <Canvas height="400.0" width="400.0" fx:id="canvas" onMouseDragged="#onCanvasDragged"/>
    </VBox>
</Pane>










